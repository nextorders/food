{
  "name": "@nextorders/monorepo",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "description": "Modern e-commerce self-hosted platform: clients will be happy to order delicious food!",
  "author": "Nick Kosarev <hmbanan666@hotmail.com>",
  "license": "MIT",
  "homepage": "https://nextorders.ru",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nextorders/food.git"
  },
  "keywords": [
    "ecommerce",
    "ecommerce-platform",
    "multilingual",
    "shop",
    "self-hosted",
    "website"
  ],
  "engines": {
    "node": ">=22.21.0",
    "pnpm": ">=10.19.0"
  },
  "scripts": {
    "release": "bumpp --execute=\"npm run release:prepare\" --recursive",
    "release:prepare": "npm run build:types",
    "build": "pnpm -r run build",
    "build:types": "tsc --emitDeclarationOnly",
    "dev:web-app:compose": "docker compose -f ./docker/web-app/docker-compose.yaml up -d",
    "dev:web-app": "pnpm -r --filter \"./apps/web-app\" dev",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "clean": "pnpm -r run clean",
    "clean:modules": "pnpm -r run clean:modules && rm -rf node_modules",
    "typecheck": "pnpm -r run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check:full": "pnpm run lint:fix && pnpm run typecheck && pnpm vitest run",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@vitest/browser": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "bumpp": "catalog:",
    "eslint": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "playwright": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:",
    "vitest-browser-vue": "catalog:"
  },
  "resolutions": {
    "unimport": "4.1.1"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json}": [
      "eslint --cache --fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
