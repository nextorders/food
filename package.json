{
  "name": "nextorders",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.9.0",
  "description": "Modern e-commerce self-hosted platform: clients will be happy to order delicious food!",
  "author": "Nick Kosarev <hmbanan666@hotmail.com>",
  "license": "MIT",
  "homepage": "https://nextorders.space",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nextorders/food.git"
  },
  "bugs": {
    "url": "https://github.com/nextorders/food/issues"
  },
  "keywords": [
    "ecommerce",
    "ecommerce-platform",
    "multilingual",
    "shop",
    "self-hosted",
    "website"
  ],
  "engines": {
    "node": ">=22.15.0",
    "pnpm": ">=10.9.0"
  },
  "scripts": {
    "release": "pnpm -r --filter \"./apps/**\" --workspace-concurrency=1 exec -- npx --no-install semantic-release -e semantic-release-monorepo",
    "build": "pnpm -r run build",
    "dev:web-app:compose": "docker compose -f ./docker/web-app/docker-compose.yaml up -d",
    "dev:web-app": "pnpm -r --filter \"./apps/web-app\" dev",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "clean": "pnpm -r run clean",
    "clean:modules": "pnpm -r run clean:modules && rm -rf node_modules",
    "typecheck": "pnpm -r run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check:full": "pnpm run lint:fix && pnpm run typecheck && pnpm vitest run",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@semantic-release/exec": "catalog:",
    "@semantic-release/git": "catalog:",
    "@vitest/browser": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "dotenv-cli": "catalog:",
    "eslint": "catalog:",
    "husky": "catalog:",
    "lint-staged": "catalog:",
    "playwright": "catalog:",
    "semantic-release": "catalog:",
    "semantic-release-monorepo": "catalog:",
    "vite": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "vitest": "catalog:",
    "vitest-browser-vue": "catalog:"
  },
  "resolutions": {
    "unimport": "4.1.1",
    "vue-tsc": "2.2.0"
  },
  "lint-staged": {
    "*.ts": "pnpm run lint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
